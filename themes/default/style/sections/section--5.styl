.section--5
  padding-top 75px
  padding-bottom 60px
  background-image url('/images/bg-market.png')
  background-size: cover;
  +mobile()
    padding-top 20px

  h1
    margin-top 0
    margin-left 55px
    margin-bottom 60px
    +mobile()
      margin-left 0
      margin-bottom 20px

  .list
    margin 0
    margin-bottom 75px
    padding 0
    list-style none
    +mobile()
      margin-bottom 0

    li
      margin-bottom 30px
      display flex
      color #9ba8b0
      align-items flex-end
      +mobile()
        display: block;
        text-align: left;

    .number
      font-family 'Iceland'
      font-size 90px
      line-height 48px
      margin-right 10px
      color #fff
      width 305px
      text-align right
      +mobile()
        margin-right 0
        text-align left
        line-height 1
        width auto
  
  .wrapper
    flex-direction row
    margin 0
    padding 0
    list-style none
    max-width 865px
    width 100%
    // margin-left 150px
    margin-left: auto;
    flex-wrap: wrap;
    +mobile()
      margin-left 0

    .source
      font-size 14px
      margin-top 15px
      margin-right auto
      +mobile()
        margin 0
        margin-top -10px
    
    .text
      max-width 700px
      width 100%
      font-size 41px
      line-height 48px
      +mobile()
        margin-top 30px
        // text-align center