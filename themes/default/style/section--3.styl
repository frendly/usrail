.section--3
	padding-bottom: 45px;

	h1
		margin-left 160px
		margin-bottom 55px

	.text--1
		width 375px

	.graph
		margin-top -15px
		margin-left 33px
		flex 1

	.graph-list
		padding 0
		margin 0

		.description
			color #9ba8b0

		.bar
			background-image linear-gradient(to right, #1a1a18, #282826, #363635, #454544, #555554)
			align-self normal
			margin-left 60px
			margin-right 15px

		&__item
			display flex
			align-items center
			height 55px
			margin-bottom 35px
			font-family 'Iceland'
			font-size 40px
			line-height 27px

			&--1
				.bar
					width 290px
			&--2
				.bar
					width 320px
			&--3
				.bar
					width 370px
			&--4
				.bar
					width 405px

	.description-list
		list-style none
		margin 0
		padding 0
		color #9ba8b0
		font-size 14px
		line-height 27px

		li + li
			margin-top 25px

	.source
		margin-top 20px
		font-size 14px
		line-height 18px
