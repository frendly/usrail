// global vars
$baseColor = #fff
$menuColor = #9ba8b0
$menuColorActive = #1a1a18
$baseBg = #1a1a18

mobile()
	@media (max-width: 768px)
		{block}

mobileMenu()
	@media (max-width: 820px)
		{block}


// import blocks
@import './style/**/*'

// global styles
html, body
	padding 0
	margin 0
	background-color $baseBg
	font-family 'Coda'
	font-size 21px
	line-height 27px
	color $baseColor
	scroll-behavior smooth

.bold
	font-weight 900
	line-height 29px

p
	margin 0 0 10px
	+mobile()
		margin-bottom 20px

header
	display flex
	align-items flex-end
	background-color #fff
	padding 47px 110px 20px 80px
	+mobileMenu()
		justify-content space-between
		position relative
		flex-direction row-reverse
		padding: 40px 20px 35px;

.logo
	background-image url('/images/logo.svg')
	width 280px
	height 45px
	background-repeat no-repeat
	background-position center
	// hide text
	overflow hidden
	text-indent -9999px
	+mobile()
		max-width: 60%;

.format1
	max-width 960px
	width 100%
	margin 0 auto
	+mobile()
		padding 10px
		box-sizing border-box

.format2
	max-width 1060px
	width 100%
	margin 0 auto
	+mobile()
		padding 10px
		box-sizing border-box
//
.wrapper
	display flex
	justify-content space-between
	+mobile()
			flex-wrap wrap

.min-offset
	margin-left 80px
	+mobile()
			margin-left 0

.text
	+mobile()
		width 100% !important
		margin-left 0 !important
		margin-right 0 !important